section.page.home
  row
    .col-sm-6
      form(role='form')
        .form-group
          label.radio Format
          input(type='radio' name='format' value='md' data-hook='format')
          =" Markdown "
          input(type='radio' name='format' value='bb' data-hook='format')
          =" BBCode "
        .form-group
          label Workout
          textarea.form-control(data-hook='raw' rows=50 placeholder='Squat 255x5x4 315x1*', title='workout' id='rawInput')
    .col-sm-6
      h1 Workout Log
      .workout(data-hook='formatted')
      .credits(data-hook='credits')
      .instructions
        ol
          li Type your workout in the box
          li Select an output format
          li Copy and paste it wherever
          li Have a great day
