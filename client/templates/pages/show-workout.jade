section
  .row
    .medium-3.medium-push-9.small-12.columns
      br
      a.radius.button.right(data-hook='editLink') Edit this workout
    .medium-9.medium-pull-3.small-12.columns
      h1(data-hook='workoutName')
      h3(data-hook='workoutDate')
  hr
  .row
    .small-12.columns
      dl.sub-nav(role='menu' title='Change workout format')
        dt Format
        dd(data-hook='format-nav-long')
          a(href='#long' data-hook='change-format') Long
        dd(data-hook='format-nav-short')
          a(href='#short' data-hook='change-format') Short
        dd(data-hook='format-nav-raw')
          a(href='#raw' data-hook='change-format') Raw
  .row(data-hook='long-format')
    .small-12.columns.panel(data-hook='activities-long')
  .row(data-hook='short-format' data-anddom-display data-anddom-hidden='true' style='display: none;')
    .small-12.columns.panel(data-hook='activities-short')
  .row(data-hook='raw-format' data-anddom-display data-anddom-hidden='true' style='display: none;')
    .small-12.columns.panel
      h4 What you typed
      blockquote
        pre(data-hook='raw')
